<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodPlannerApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>


    </style>

    <style name="text_field">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/main_button_layout</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16dp</item>


    </style>

    <style name="secondary_button" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/secondary_button_layout</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="home_button" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/secondary_button_layout</item>
        <item name="android:layout_height">58dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="Theme.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>


    <style name="dialog_theme" parent="Theme.Material3.DayNight.Dialog">
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">#F5F5F5</item>
        <item name="android:dateTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:theme">@style/CalenderViewDateCustomText</item>
        <item name="android:weekDayTextAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="CalenderViewDateCustomText">
        <item name="colorControlNormal">@color/secondaryColor</item>
        <item name="colorControlActivated">@color/secondaryColor</item>
        <item name="colorControlHighlight">@color/secondaryColor</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Theme.FoodPlannerApp" parent="Base.Theme.FoodPlannerApp" />
</resources>