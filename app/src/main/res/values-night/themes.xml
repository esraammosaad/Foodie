<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodPlannerApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/primaryColor</item>
    </style>
    <style name="text_field" parent="Theme.Material3.DayNight">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="button" parent="Theme.Material3.DayNight">
        <item name="android:background">@drawable/main_button_layout</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>


    </style>
    <style name="secondary_button" parent="Theme.Material3.DayNight" >
        <item name="android:background">@drawable/secondary_button_layout</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>

    </style>
    <style name="home_button" parent="Theme.Material3.DayNight" >
        <item name="android:background">@drawable/secondary_button_layout</item>
        <item name="android:layout_height">58dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="Theme.BottomNavigationView.ActiveIndicator" parent="Theme.Material3.DayNight">
        <item name="android:color">@android:color/transparent</item>
    </style>




</resources>